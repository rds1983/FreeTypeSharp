<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Authors>FreeTypeSharpTeam</Authors>
    <Product>FreeTypeSharp</Product>
    <PackageId>FreeTypeSharp</PackageId>
    <TargetFrameworks>netstandard2.0;net45</TargetFrameworks>
    <Description>C# port of the freetype</Description>
    <PackageProjectUrl>https://github.com/StbSharp/FreeTypeSharp</PackageProjectUrl>
    <PackageLicenseExpression>Unlicense</PackageLicenseExpression>
    <Version>1.00.4</Version>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>
  
  <PropertyGroup Condition="'$(Configuration)'=='Release'">
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>
</Project>